<style>
  body {
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  background-image: url("https://images.hdqwalls.com/download/adventure-time-ty-3840x2160.jpg");
  background-size: cover;
  margin: 0;
  padding: 0;
}
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #8A2BE2	;
  color: #fff;
  padding: 10px;
}
h1 {
  margin: 10px;
  font-style: oblique;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-size: 30px;
  padding-right: 10px;
}
header a {
  display: block;
  color: #fff;
  background-color: #CD5C5C;
  padding: 10px 20px;
  cursor: pointer;
  margin: 5px;
  font-size: 15px;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}
header a:hover {
  background-color: #EE82EE;
}
nav {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #FFEFD5;
  padding: 5px;
  border-style: ridge;
}
nav ul {
  display: contents;
  list-style: none;
  margin: 0;
  padding: 0;
}
nav li {
  justify-content:center;
  display: block;
  cursor: pointer;
  width: 100%;
  font-size: 20px;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-weight: bold;
  font-style: oblique;
  text-align: center;
}
nav li:hover {
  background-color: #BA55D3	;
}
div {
  width: 800px;
  margin: 50px auto;
  border: 1px solid #ccc;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  padding: 20px;
}
h2 {
      color: #333;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    label {
      margin: 10px 0;
      color: #555;
      width: 100%;
      font-style: italic;
    }

    select,input {
      width: 100%;
      padding: 8px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }
    textarea {
      width: 100%;
      padding: 25%;
      margin-bottom: 15px;
      box-sizing: border-box;
    }
    
</style>
<body>
  <header>
    <h1>Greetings, <%= userFullName %>!</h1>
    <a href="/signout">Sign Out</a>
  </header>

  <nav>
    <ul>
        <li><a href="/inbox">Inbox</a></li>
        <li><a href="/compose">Compose</a></li>
        <li><a href="/outbox">Outbox</a></li>
    </ul>
  </nav>

  
  <div class="content">
    <h2>Compose Email</h2>
    <form action="/compose" method="post">
      <label for="recipient">Reciever:</label>
      <select id="recipient" name="recipientId">
        <% recipients.forEach(recipient => { %>
          <option value="<%= recipient.id %>"><%= recipient.full_name %></option>
        <% }) %>
      </select>
  
      <label for="subject">Subject:</label>
      <input type="text" id="subject" name="subject">
  
      <label for="body">Body:</label>
      <textarea id="body" name="body"></textarea>
  
      <button type="submit">Send</button>
    </form>
  </div>
  